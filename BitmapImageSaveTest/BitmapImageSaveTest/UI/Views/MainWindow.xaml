<Window x:Class="BitmapImageSaveTest.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BitmapImageSaveTest.Local.ViewModels"
        xmlns:local="clr-namespace:BitmapImageSaveTest.UI.Views"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">

    <!--<Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>-->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition />
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal">
            <TextBlock Text="화면 저장 시작:" />
            <Button Command="{Binding Path=StartSavingScreenCommand}"
                    Width="40"
                    Margin="10,0,0,0" />

            <TextBlock Text="화면 저장 중지:"
                       Margin="10,0,0,0" />
            <Button Command="{Binding Path=StopSavingScreenCommand}"
                    Width="40"
                    Margin="10,0,0,0" />

            <Ellipse Width="20"
                     Height="20"
                     Margin="20,0,0,0">

                <Ellipse.Style>
                    <Style TargetType="{x:Type Ellipse}">
                        <Setter Property="Fill" Value="Red" />

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=IsScreenSaving}"
                                         Value="True">
                                <Setter Property="Fill" Value="Green" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=IsScreenSaving}"
                                         Value="False">
                                <Setter Property="Fill" Value="Red" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Ellipse.Style>
            </Ellipse>
        </StackPanel>

        <Grid Grid.Row="1">
            <local:ColorSpreadView />
        </Grid>
    </Grid>
</Window>